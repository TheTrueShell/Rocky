{
  "manifest_version": 3,
  "name": "Rocky - Virtual Pet Rock",
  "version": "1.0",
  "description": "Take care of your very own virtual pet rock!",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 